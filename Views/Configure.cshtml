@{
    Layout = "";
}
@model Nop.Plugin.Misc.ComingSoonPage.Models.ConfigurationModel
@using Nop.Web.Framework;

@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.BackgroundId_OverrideForStore, model => model.BackgroundId, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.BackgroundId)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.BackgroundId)
                        @Html.ValidationMessageFor(model => model.BackgroundId)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.OpeningDate_OverrideForStore, model => model.OpeningDate, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.OpeningDate)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.OpeningDate)
                        @Html.ValidationMessageFor(model => model.OpeningDate)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.DisplayCountdown_OverrideForStore, model => model.DisplayCountdown, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.DisplayCountdown)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.DisplayCountdown)
                        @Html.ValidationMessageFor(model => model.DisplayCountdown)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.DisplayNewsletterBox_OverrideForStore, model => model.DisplayNewsletterBox, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.DisplayNewsletterBox)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.DisplayNewsletterBox)
                        @Html.ValidationMessageFor(model => model.DisplayNewsletterBox)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.DisplayLoginButton_OverrideForStore, model => model.DisplayLoginButton, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.DisplayLoginButton)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.DisplayLoginButton)
                        @Html.ValidationMessageFor(model => model.DisplayLoginButton)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}